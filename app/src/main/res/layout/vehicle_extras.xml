    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ad_mileage"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Mileage"
        android:textColorHint="@drawable/reg_input_sel"
        android:visibility="visible"
        app:boxCornerRadiusBottomEnd="0dp"
        app:boxCornerRadiusBottomStart="0dp"
        app:boxCornerRadiusTopEnd="5dp"
        app:boxCornerRadiusTopStart="5dp"
        app:boxStrokeColor="@drawable/reg_selector"
        app:errorEnabled="true"
        app:hintAnimationEnabled="true"
        app:hintEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ad_transmission_group"
        app:layout_constraintStart_toStartOf="@+id/ad_transmission_group"
        app:layout_constraintTop_toBottomOf="@+id/ad_transmission_group">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ad_mileage_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
